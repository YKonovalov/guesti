VER=08.04
NAME=hardy
ARCHES="amd64 i386"

S=$OS_OBJECT_URL/is

for ARCH in $ARCHES; do
    U=http://old-releases.ubuntu.com/ubuntu/dists/$NAME/main/installer-$ARCH/current/images/netboot/ubuntu-installer/$ARCH
    A=
    if [ "$ARCH" != "amd64" ]; then
     A=" $ARCH"
    fi
    guesti os install \
     --template-name "Ubuntu $VER $NAME$A" \
     --initrd  $U/initrd.gz \
     --kernel "$U/linux url=$S/Ubuntu-$NAME interface=auto auto=true priority=critical console-setup/layoutcode=us"
done
