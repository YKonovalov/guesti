# Ubuntu 10.04 lucid preseed customized for OpenStack.

d-i mirror/manual boolean true
d-i mirror/country string manual
d-i mirror/protocol select http
d-i mirror/http/hostname string mirror.yandex.ru
d-i mirror/http/directory string /ubuntu

# Suite to install.
d-i mirror/suite string lucid
# Suite to use for loading installer components (optional).
d-i mirror/udeb/suite string lucid

d-i debian-installer/allow_unauthenticated string true
d-i partman-lvm/device_remove_lvm boolean true

d-i debian-installer/locale string en_US
d-i keymap select us
d-i keyboard-configuration/xkb-keymap us
d-i console-keymaps-at/keymap select us

d-i netcfg/choose_interface select auto
d-i netcfg/dhcp_timeout string 60
d-i netcfg/dhcp_failed note
d-i netcfg/dhcp_options select Configure network manually
d-i netcfg/get_hostname string cloudguest
d-i netcfg/wireless_wep string
d-i netcfg/target_network_config ifupdown

d-i clock-setup/utc boolean true
d-i time/zone string Europe/Moscow
d-i clock-setup/ntp boolean true

### Remove ISO9660 header to make grub-install happy.
d-i preseed/early_command string dd if=/dev/zero of=/dev/vda bs=1024k count=1

### Partitioning
d-i partman-auto/disk string /dev/vda
d-i partman-auto/method string regular
d-i partman-auto/expert_recipe string root :: \
 999  1000 -1 $default_filesystem label{ root } $primary{ } $bootable{ } \
    method{ format } format{ } use_filesystem{ } $default_filesystem{ } \
    mountpoint{ / } .
d-i partman-auto/choose_recipe select root
d-i partman-partitioning/confirm_write_new_label boolean true
d-i partman/choose_partition select finish
d-i partman/confirm boolean true
d-i partman/confirm_nooverwrite boolean true
d-i partman-basicfilesystems/no_swap boolean false

## Users
d-i passwd/root-login boolean true
d-i passwd/root-password-crypted string !!

d-i passwd/make-user boolean true
d-i passwd/user-fullname string "default cloud user"
d-i passwd/username string cloud-user
d-i passwd/user-password-crypted string !!

## APT
d-i apt-setup/security_host mirror.yandex.ru
d-i apt-setup/volatile_host string

d-i apt-setup/non-free boolean true
d-i apt-setup/contrib boolean false
d-i apt-setup/use_mirror boolean false

d-i apt-setup/universe boolean true
d-i apt-setup/backports boolean true
d-i apt-setup/services-select multiselect
#d-i apt-setup/local0/repository string http://dist.yandex.ru/common stable all amd64

tasksel tasksel/first multiselect ssh-server
d-i pkgsel/install-language-support boolean false
d-i pkgsel/include string linux-virtual openssh-server \
    cloud-init \
    vim mc byobu screen tmux w3m man \
    sudo bc curl ndisc6 python-scapy \
    acpid ntp wide-dhcpv6-client avahi-autoipd

### Bootloader
d-i grub-installer/bootdev string /dev/vda
d-i grub-installer/only_debian boolean false
d-i grub-installer/with_other_os boolean false
d-i base-installer/kernel/image string linux-image-virtual
d-i grub-installer/timeout string 1
d-i debian-installer/quiet boolean false
d-i debian-installer/splash boolean false
d-i debian-installer/add-kernel-opts string console=ttyS0,115200n8 console=tty0 apparmor=0

d-i debian-installer/exit/poweroff boolean true
d-i finish-install/reboot_in_progress note

tmpreaper tmpreaper/readsecurity note
tmpreaper tmpreaper/readsecurity_upgrading note

# Clear network iface mapping; force network to wait for dhcp before cloud-init
d-i preseed/late_command string \
    in-target invoke-rc.d apparmor kill; \
    in-target update-rc.d -f apparmor remove; \
    in-target dpkg -r language-pack-gnome-en language-pack-gnome-en-base apparmor apparmor-utils; \
    in-target rm -f /etc/udev/rules.d/70-persistent-net.rules; \
    in-target sed -i 's/^[[:blank:]]\*\(linux.*\)[[:blank:]]\+quiet\(.*\)$/\1\2/g' /boot/grub/grub.cfg; \
    in-target sed -i '$ a cloud-user ALL=(ALL) NOPASSWD: ALL' /etc/sudoers; \
    in-target sed -i 's/^\([[:blank:]]*user:[[:blank:]]\+\)ubuntu$/\1cloud-user/' /etc/cloud/cloud.cfg; \
    in-target mv /etc/cloud/templates/sources.list.tmpl /etc/cloud/templates/sources.list.tmpl--disabled; \
    in-target mv /etc/cloud/templates/hosts.tmpl /etc/cloud/templates/hosts.tmpl--disabled; \
    sed "/^127.0.0.1[[:blank:]]\+localhost/! s/^\(127.0.\(1\|0\).1[[:blank:]]\+\).*$/\1newborn/" /etc/hosts >/target/etc/hosts; \
    printf ' pre-up /usr/sbin/avahi-autoipd -D $IFACE:avahi\n'   >> /target/etc/network/interfaces; \
    printf ' pre-down /usr/sbin/avahi-autoipd --kill $IFACE:avahi\n'   >> /target/etc/network/interfaces; \
    printf ' up dhclient3 -nw -e IF_METRIC=100 -pf /var/run/dhclient.$IFACE.pid -lf /var/lib/dhcp3/dhclient.$IFACE.leases $IFACE\n'   >> /target/etc/network/interfaces; \
    printf ' down dhclient3 -r -pf /var/run/dhclient.$IFACE.pid -lf /var/lib/dhcp3/dhclient.$IFACE.leases $IFACE\n'   >> /target/etc/network/interfaces; \
    printf "newborn\n" > /target/etc/hostname; \
    printf "id-assoc na 0 { };\ninterface eth0\n{\n"                                     >/target/etc/wide-dhcpv6/dhcp6c.conf; \
    printf "  send ia-na 0;\n  request domain-name-servers;\n"                          >>/target/etc/wide-dhcpv6/dhcp6c.conf; \
    printf "  request domain-name;\n  script \"/etc/wide-dhcpv6/dhcp6c-script\";\n};\n" >>/target/etc/wide-dhcpv6/dhcp6c.conf; \
    sed -i "/^exit 0/ i /usr/sbin/ndisc_update >dev/null 2>&1 &" /target/etc/wide-dhcpv6/dhcp6c-script; \
    printf '#!/bin/sh\nPIDFILE="$(mktemp)"\nCLEAN=\ncleanup() {\n if [ -z "$CLEAN" ]; then\n\tkill `cat "$PIDFILE"` 2>/dev/null\n\trm -f "$PIDFILE"\n\tCLEAN=yes\n fi\n}\ntrap cleanup 0 1 2 15\n(ip -6 monitor address & echo $! > "$PIDFILE")|\n\tsed -n "s;^[[:digit:]]\+:\s\+\([[:alnum:]]\+\)\s\+inet6\s\+\([[:alnum:]:]\+\)/[[:digit:]]\+\s\+scope global[[:blank:]]*$;\\2 \\1;;ta;b;:a p;ekill \$(cat $PIDFILE)"' >/target/usr/bin/wait_for_ipv6_global_permanent; \
    chmod a+x /target/usr/bin/wait_for_ipv6_global_permanent; \
    printf '#!/bin/sh\nIP= IFACE= MAC= EOPT= OUT=\nwhile true; do\n\tIP=\n\tcase "${IP:=$1}" in\n\t\tmonitor)\n\t\t\tlogger -t "ndisc_update[$$]" "Waiting for permanent IPv6 address..."\n\t\t\tO="$(wait_for_ipv6_global_permanent)"\n\t\t\tif [ -z "$O" ]; then\n\t\t\t\tlogger -t "ndisc_update[$$]" "ERROR: Monitor exit with no result"\n\t\t\t\texit 1\n\t\t\telse\n\t\t\t\tset $O\n\t\t\tfi\n\t\t\t;;\n\t\t"")\n\t\t\tO="$(ip -6 -o a s scope global permanent|head -1|awk '"'"'{split($4,a,"/"); print a[1]" "$2}'"'"')"\n\t\t\tif [ -z "$O" ]; then\n\t\t\t\tlogger -t "ndisc_update[$$]" "No permanent IPv6 addresses found"\n\t\t\t\tset "monitor"\n\t\t\telse\n\t\t\t\tset $O\n\t\t\tfi\n\t\t\t;;\n\t\t-h|--help)\n\t\t\techo "usage: $0 [monitor|{IPv6 address}] [interface] [mac]"\n\t\t\texit 0\n\t\t\t;;\n\t\t*)\n\t\t\tbreak\n\t\t\t;;\n\tesac\ndone\nIFACE="${2:-$(ip -6 -o a s|grep " $IP/"|cut -d" " -f2)}"\nIFACE="${IFACE:-eth0}"\nMAC="${3:-$(cat /sys/class/net/$IFACE/address)}"\nEOPT="${MAC:+src=\\"$MAC\\"}"\nMAC="${MAC:-auto}"\n'"echo 'a=Ether('\$EOPT')/IPv6()/ICMPv6ND_NA(tgt=\"'\$IP'\",R=0);sendp(a/ICMPv6NDOptDstLLAddr(lladdr=a.src),iface=\"'\$IFACE'\")'|\n"' if OUT="$(scapy 2>&1)"; echo "$OUT"|grep ^Sent >/dev/null; then\n\tlogger -t "ndisc_update[$$]" "Unsolicited Neighbor Advertisement sent for $IP with mac $MAC via $IFACE"\n else\n\techo "$@\\n$OUT\\n"|sed "s/[^[:print:]]*//g"\n fi\n' > /target/usr/sbin/ndisc_update; \
    chmod o+x /target/usr/sbin/ndisc_update; \
    printf '#!/bin/bash\nDUID_FILE="/var/lib/dhcpv6/dhcp6c_duid"\nID="00 04 $(sed -e s/-//g -e "s/\(..\)/\\1 /g" /sys/devices/virtual/dmi/id/product_uuid)"\nN="$(printf %%02X $(echo $ID|wc -w))"\nREC="$(echo $N 00 $ID|tr [:lower:] [:upper:])"\nCUR="$(echo $(od -A n -t x1 "$DUID_FILE"|tr [:lower:] [:upper:]))"\n[ "$CUR" = "$REC" ] && exit 0\nfor i in $REC; do\n printf $(printf "\%%03o" 0x$i)\ndone > "$DUID_FILE"\nlogger "DUID updated to $ID"\n' >/target/usr/sbin/duid-uuid-update; \
    chmod o+x /target/usr/sbin/duid-uuid-update; \
    printf '/usr/sbin/duid-uuid-update\n' >> /target/etc/default/wide-dhcpv6-client; \
    echo "Please note: By default it is not possible to login at this terminal. The system" >>/target/etc/issue ;\
    echo "initially configured for SSH access only. Moreover, a single ssh key - the one"   >>/target/etc/issue ;\
    echo "specified at run time could be used to connect to this machine. To access this"   >>/target/etc/issue ;\
    echo "system, please run SSH client, choose correct SSH private key and specify"        >>/target/etc/issue ;\
    echo "username \"cloud-user\"."                                                         >>/target/etc/issue ;\
    echo                                                                                    >>/target/etc/issue ;\
    echo "The above notice might not be true if the configuration of the system has been"   >>/target/etc/issue ;\
    echo "altered by the administrator of this machine. In later case please consider to"   >>/target/etc/issue ;\
    echo "remove this message from /etc/issue file."                                        >>/target/etc/issue ;\
    echo                                                                                    >>/target/etc/issue ;\
    in-target curl http://bazaar.launchpad.net/~cloud-utils-dev/cloud-utils/trunk/download/head:/growpart-20110225134600-d84xgz6209r194ob-1/growpart -o /usr/bin/growpart; \
    in-target sed -i "s/\[ \(.*\) -gt \(.*mbr_max_512.*\) \]/echo \1 \2\|awk '{if(\$1<\$2)exit 1\}'/" /usr/bin/growpart; \
    in-target chmod 755 /usr/bin/growpart; \
    in-target curl http://bazaar.launchpad.net/~cloud-initramfs-tools/cloud-initramfs-tools/trunk/download/head:/growroot-20110228195634-hyxy7n1nt4n6pq7r-22/growroot -o /etc/initramfs-tools/hooks/growroot; \
    in-target curl http://bazaar.launchpad.net/~cloud-initramfs-tools/cloud-initramfs-tools/trunk/download/head:/growroot-20110228195634-hyxy7n1nt4n6pq7r-35/growroot -o /etc/initramfs-tools/scripts/local-bottom/growroot; \
    in-target sed -i "s:^\(.*\$(growpart.*2>\)\&1\().*\)$:\1/dev/null\2:" /etc/initramfs-tools/scripts/local-bottom/growroot ;\
    in-target chmod 755 /etc/initramfs-tools/hooks/growroot /etc/initramfs-tools/scripts/local-bottom/growroot ;\
    in-target sed -i '/^exit 0/ i resize2fs /dev/vda1' /etc/rc.local ;\
    in-target update-initramfs -u ;\
    dd bs=1M if=/dev/zero of=/target/var/tmp/zeros || : ;\
    rm -f /target/var/tmp/zeros
